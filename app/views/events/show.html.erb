<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>

<p>
  <b>Period:</b>
  <%= @event.period %>
</p>

<p>
  <b>Start at:</b>
  <%= @event.start_at %>
</p>

<p>
  <b>End at:</b>
  <%= @event.end_at %>
</p>

<p>
  <b>User id:</b>
  <%= @event.user_id %>
</p>

<p>
  <b>Period id:</b>
  <%= @event.period_id %>
</p>

<p>
  <b>End period:</b>
  <%= @event.end_period %>
</p>

<p>
  <b>Color:</b>
  <%= @event.color %>
</p>

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if user_signed_in? %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :period %><br />
    <%= f.select :period, [[" "],["day"],["week"],["month"],["year"]] %>
  </div>
  <div class="field">
    <%= f.label :start_at %><br />
    <%= f.datetime_select :start_at %>
  </div>
  <div class="field">
    <%= f.label :end_at %><br />
    <%= f.datetime_select :end_at %>
  </div>
  <div class="field">
    
    <%= f.hidden_field :user_id, value: current_user.id %>
      
  </div>
  <div class="field">
    <%= f.hidden_field :period_id %>
  </div>
  <div class="field">
    <%= f.label :end_period %><br />
    <%= f.datetime_select :end_period %>
  </div>
  <div class="field">
    <%= f.label :color %><br />
    <%= f.select :color, [["Red","#ff9999"], ["Orange","#ff9933"], ["Yellow","#ffcc00"], ["Green","#99ff33"], ["Blue","#33ffff"], ["Indigo","#3399ff"], ["Violet","#cc99ff"]]%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
<% end %>

